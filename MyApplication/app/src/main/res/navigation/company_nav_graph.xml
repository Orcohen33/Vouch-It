<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeCompanyFragment">

    <fragment
        android:id="@+id/HomeCompanyFragment"
        android:name="com.example.myapplication.fragments.company.home.HomeCompanyFragment"
        android:label="@string/company_home_fragment_label"
        tools:layout="@layout/fragment_home_company">

        <action
            android:id="@+id/action_HomeCompanyFragment_to_AddCouponFragment"
            app:destination="@id/AddCouponFragment" />
        <action
            android:id="@+id/action_HomeCompanyFragment_to_analysisFragment"
            app:destination="@id/analysisFragment" />
    </fragment>
    <fragment
        android:id="@+id/AddCouponFragment"
        android:name="com.example.myapplication.fragments.company.add_or_edit_coupon.AddOrEditCouponFragment"
        android:label="@string/company_add_coupon_fragment_label"
        tools:layout="@layout/fragment_add_or_edit_coupon">

        <action
            android:id="@+id/action_AddCouponFragment_to_HomeCompanyFragment"
            app:destination="@id/HomeCompanyFragment" />
    </fragment>
    <fragment
        android:id="@+id/analysisFragment"
        android:name="com.example.myapplication.fragments.company.analysis.AnalysisFragment"
        android:label="fragment_analysis"
        tools:layout="@layout/fragment_analysis" >
        <action
            android:id="@+id/action_analysisFragment_to_HomeCompanyFragment"
            app:destination="@id/HomeCompanyFragment" />
    </fragment>
</navigation>